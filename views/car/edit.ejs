<form method="POST" action="/cars/<%= car._id %>?_method=PUT">

    <label for="color">Color:</label>
    <input id="color" type="text" name="color" placeholder="add color" value="<%= car.color %> ">
    <br />
    <label for="year">Year:</label>
    <input id="year" type="text" name="year" placeholder="add year" value="<%= car.year %>">
    <br />
    <label for="model">Model:</label>
    <input id="model" type="text" name="model" placeholder="add model" value="<%= car.model %>">
    <br />
    <input type="submit" value="edit car" />
</form>